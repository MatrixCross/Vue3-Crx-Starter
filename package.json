{
  "name": "crx-starter",
  "version": "0.0.1",
  "description": "Simple Chrome Extension Vite Starter starter",
  "type": "module",
  "author": "Wyatex",
  "scripts": {
    "dev": "cross-env CRX_ENV=development run-p dev:*",
    "dev:code": "vite build",
    "dev:content": "vite build --config vite.content.config.ts",
    "dev:copy": "jiti scripts/monitor.ts",
    "build": "cross-env CRX_ENV=production pnpm clear && vite build && vite build --config vite.content.config.ts && node scripts/monitor.js",
    "clear": "rimraf extension",
    "postinstall": "simple-git-hooks",
    "lint": "eslint ."
  },
  "dependencies": {
    "@vueuse/core": "^10.11.0",
    "idb": "^8.0.0",
    "naive-ui": "^2.39.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.23.2",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@iconify/json": "^2.2.230",
    "@iconify/vue": "^4.1.2",
    "@types/chrome": "^0.0.268",
    "@types/node": "^18.19.41",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "@unocss/eslint-plugin": "^0.61.5",
    "@vitejs/plugin-vue": "^5.0.5",
    "chokidar": "^3.6.0",
    "commitlint": "^19.3.0",
    "cross-env": "^7.0.3",
    "cz-git": "^1.9.4",
    "eslint": "^9.7.0",
    "eslint-plugin-format": "^0.1.2",
    "eslint-plugin-vue": "^9.27.0",
    "fs-extra": "^11.2.0",
    "jiti": "^1.21.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.5.4",
    "unocss": "^0.61.5",
    "unplugin-auto-import": "^0.18.0",
    "unplugin-icons": "^0.19.0",
    "unplugin-vue-components": "^0.27.3",
    "vite": "^5.3.4",
    "vite-plugin-replace": "^0.1.1",
    "vue": "^3.4.33",
    "ws": "^8.18.0"
  },
  "simple-git-hooks": {
    "commit-msg": "npx --no-install commitlint --edit \"$1\"",
    "pre-commit": "pnpm lint"
  }
}
